<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <data>

    <variable
      name="viewmodel"
      type="com.logic.mine.user.UserViewModel" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="头像" />

      <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/grey_300" />

      <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/mine_ic_arrow_right" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称: " />

      <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="请输入昵称" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别: " />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄: " />

      <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="请输入年龄" />


    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身高: " />

      <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="请输入昵称" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="体重: " />

      <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="请输入昵称" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="体脂: " />

      <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="请输入昵称" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="区域: " />

      <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="请输入昵称" />

    </LinearLayout>

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="确认" />


  </LinearLayout>
</layout>
