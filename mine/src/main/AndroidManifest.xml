<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.logic.mine">

  <application
    android:label="@string/app_name"
    android:icon="@mipmap/logo"
    android:largeHeap="true"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    tools:ignore="GoogleAppIndexingWarning"
    tools:targetApi="n">

    <meta-data
      android:name="design_width_in_dp"
      android:value="360" />
    <meta-data
      android:name="design_height_in_dp"
      android:value="640" />

    <activity android:name=".DebugActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".my_event.EventActivity"
      android:launchMode="singleTop" />
    <activity
      android:name=".my_following.FollowingActivity"
      android:launchMode="singleTop" />
    <activity
      android:name=".my_message.MyMessageActivity"
      android:launchMode="singleTop" />
    <activity
      android:name=".my_sport.RecordActivity"
      android:launchMode="singleTop" />
    <activity
      android:name=".settings.SettingsActivity"
      android:launchMode="singleTop" />
    <activity
      android:name=".settings.about_us.AboutUsActivity"
      android:launchMode="singleTop" />
    <activity
      android:name=".settings.change_phone.ChangePhoneActivity"
      android:launchMode="singleTop" />
    <activity
      android:name=".settings.feedback.FeedbackActivity"
      android:launchMode="singleTop" />

    <activity android:name=".my_message.friend_message.FriendMessageActivity" />
    <activity android:name=".my_message.group_message.GroupMessageActivity" />
    <activity android:name=".my_message.notification_message.NotificationMessageActivity" />
    <activity android:name=".user.UserActivity" />
  </application>

</manifest>